<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.simplify.sample.db.login.dao">

    <insert id="registerInfo"  parameterType="UserModel">
        INSERT INTO userinfo (id, pass) VALUES (#{id}, #{pass});
    </insert>

    <insert id="checkUser"  parameterType="UserModel">
          select count(*) from user where id = (#{id}) and pass=(#{pass})
    </insert>


</mapper>